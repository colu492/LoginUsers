<h3>Productos en tiempo real</h3>
<form id="addproduct">
    <h4>Agregar producto JSON</h4>
    <textarea name="productjson" id="prodjson" cols="20" rows="5"></textarea>
    <button type="submit">Enviar</button>
</form>

<div id="realtimeproducts">
    {{#each products}}
        <div id="product{{this.id}}">
            <h4>{{this.title}}</h4>
            <img src="https://ichef.bbci.co.uk/news/640/cpsprodpb/870D/production/_111437543_197389d9-800f-4763-8654-aa30c04220e4.png{{this.thumbnails}}" alt="foto producto"width="100"/>
            <p>{{this.description}}</p>
            <p>Precio: ${{this.price}}</p>
            <p>Categoría: {{this.category}}</p>
            <p>Imagen: {{this.thumbnails}}</p>
            <p>Status: {{this.status}}</p>
            <p>Código: {{this.code}}</p>
            <p>Stock: {{this.stock}}</p>
            <input type="button" prodid="{{this.id}}" value="Borrar este curso"/>
        </div>
    {{/each}}
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="../scripts/socketClient.js"></script>